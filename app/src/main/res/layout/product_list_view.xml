<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:orientation="vertical"
    card_view:cardCornerRadius="20dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/layout_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        card_view:cardBackgroundColor="#ffffff"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/abcd"
                android:layout_width="match_parent"
                android:layout_height="115.0dp">

                <ImageView
                    android:id="@+id/itemIcon"
                    android:layout_width="match_parent"
                    android:layout_height="115dp"
                    android:layout_margin="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/a2" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="5dp"
                android:background="#bdb6e239" />

            <LinearLayout
                android:id="@+id/layout_item_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="115dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="20dp">

                            <TextView
                                android:id="@+id/itemName"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentTop="true"
                                android:layout_centerInParent="true"
                                android:autoSizeTextType="uniform"
                                android:text="(Spanish)"
                                android:textColor="@color/headingtextcolor"
                                android:textSize="15dp"
                                android:textStyle="bold" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="bottom|center">

                            <TextView
                                android:id="@+id/itemPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dp"
                                android:text="Rs. 8,999"
                                android:textColor="#4CAF50"
                                android:textSize="13dp" />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/itemQuantity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Item quantity"
                                android:textColor="@color/headingtextcolor"
                                android:textSize="11.8dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageButton
                                android:id="@+id/minusButton"
                                android:layout_width="23dp"
                                android:layout_height="23dp"
                                android:layout_gravity="center_vertical"
                                android:background="?selectableItemBackgroundBorderless"
                                android:scaleType="centerCrop"
                                card_view:srcCompat="@drawable/minus" />

                            <TextView
                                android:id="@+id/enterQuantity1"
                                android:layout_width="40dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:background="@drawable/edittext_shape3"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLines="1"
                                android:padding="2dp"
                                android:text="0"
                                android:textColor="@color/colorAccent" />

                            <ImageButton
                                android:id="@+id/plusButton"
                                android:layout_width="23dp"
                                android:layout_height="23dp"
                                android:layout_gravity="center_vertical"
                                android:background="?selectableItemBackgroundBorderless"
                                android:scaleType="centerCrop"
                                card_view:srcCompat="@drawable/plus" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageButton

                                android:id="@+id/addToCart1"
                                android:layout_width="37dp"
                                android:layout_height="37dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginHorizontal="10dp"
                                android:background="?selectableItemBackgroundBorderless"
                                android:scaleType="centerInside"
                                card_view:srcCompat="@drawable/cartaddicon" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>