<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/actionBar1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:background="@drawable/nav_style1">

            <!--<ImageButton
                android:id="@+id/backButton1"
                android:elevation="5dp"
                android:layout_margin="5dp"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/back1"
                android:scaleType="fitCenter"
                android:padding="9dp"
                android:layout_width="50dp"
                android:layout_height="50dp" />-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="serif"
                android:shadowColor="#2092a1"
                android:shadowRadius="5"
                android:text="Sign In"
                android:textColor="@color/headingtextcolor"
                android:textSize="21sp" />

            <!--<ImageButton
                android:transitionName="logo1"
                android:layout_margin="5dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentRight="true"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/logo"
                android:padding="0dp"
                android:scaleType="centerInside"
                android:layout_width="52dp"
                android:layout_height="45dp" />-->

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00ffffff">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3">


                        <ImageView
                            android:id="@+id/signinlogo"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:elevation="10dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/loginicon" />


                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <androidx.cardview.widget.CardView
                            android:layout_width="320dp"
                            android:layout_height="370dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="10dp"
                            app:cardBackgroundColor="#ffffff"
                            app:cardCornerRadius="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:paddingTop="20dp"
                                android:paddingBottom="20dp">


                                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_marginVertical="5dp"
                                    android:layout_weight="1"
                                    android:alpha="0.9"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    tools:context="org.terna.register_ui.MainActivity">


                                    <EditText
                                        android:id="@+id/usernameLogin"
                                        android:layout_width="270dp"
                                        android:layout_height="42dp"
                                        android:layout_gravity="center"
                                        android:alpha="0.8"
                                        android:background="@drawable/edittext_shape"
                                        android:drawableLeft="@drawable/ic_person_black_24dp"
                                        android:drawablePadding="10sp"
                                        android:drawableTint="@color/drawabletint"
                                        android:hint="Username"
                                        android:inputType="textEmailAddress"
                                        android:maxLines="1"
                                        android:paddingLeft="14sp"
                                        android:textColor="#59861b"
                                        android:textColorHint="#59861b"
                                        android:textSize="19sp" />


                                </LinearLayout>

                                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_marginVertical="5dp"
                                    android:layout_marginTop="0dp"
                                    android:layout_weight="1"
                                    android:alpha="0.9"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    >


                                    <RelativeLayout
                                        android:id="@+id/combo1"
                                        android:layout_width="270dp"
                                        android:layout_height="42dp"
                                        android:background="@drawable/edittext_shape">

                                        <EditText
                                            android:id="@+id/passwordLogin"
                                            android:layout_width="228dp"
                                            android:layout_height="42dp"
                                            android:layout_alignParentTop="true"
                                            android:layout_toLeftOf="@+id/seePass1"
                                            android:alpha="0.8"
                                            android:background="?selectableItemBackground"
                                            android:drawableLeft="@drawable/security1"
                                            android:drawablePadding="10sp"
                                            android:drawableTint="@color/drawabletint"
                                            android:fontFamily="sans-serif"
                                            android:hint="Password"
                                            android:inputType="textPassword"
                                            android:lines="1"
                                            android:maxLines="1"
                                            android:paddingLeft="11sp"
                                            android:paddingRight="10dp"
                                            android:textColor="@color/normaltextcolor"
                                            android:textColorHint="@color/normaltextcolor"
                                            android:textSize="19sp" />


                                        <TextView
                                            android:id="@+id/seePass1"
                                            android:layout_width="27dp"
                                            android:layout_height="27dp"
                                            android:layout_alignParentRight="true"
                                            android:layout_centerVertical="true"
                                            android:layout_marginRight="12dp"
                                            android:background="@drawable/security3" />


                                    </RelativeLayout>


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_marginTop="20dp"
                                    android:layout_weight="1"
                                    android:alpha="0.9"
                                    android:gravity="center"
                                    tools:context="org.terna.register_ui.MainActivity">


                                    <Button
                                        android:id="@+id/loginButton"
                                        android:layout_width="270dp"
                                        android:layout_height="48dp"
                                        android:background="@drawable/button_style1"
                                        android:shadowColor="#188270"
                                        android:shadowRadius="10"
                                        android:text="Login"
                                        android:textAllCaps="false"
                                        android:textColor="#ffffff"
                                        android:textSize="23sp"
                                        android:textStyle="bold"
                                        android:transitionName="signinTransition" />


                                </LinearLayout>

                                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_weight="1"
                                    android:alpha="0.9"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    tools:context="org.terna.register_ui.MainActivity">


                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_marginHorizontal="20dp"
                                        android:layout_marginVertical="10dp"
                                        android:background="#b3b2b2">

                                    </View>

                                    <TextView
                                        android:id="@+id/newUserRegistration"
                                        android:layout_width="270dp"
                                        android:layout_height="42dp"
                                        android:gravity="center"
                                        android:text="Don't Have an Account? Click Here"
                                        android:textAllCaps="false"
                                        android:textColor="@color/normaltextcolor"
                                        android:textSize="16sp"
                                        android:transitionName="signinTransition" />


                                </LinearLayout>

                                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_weight="1"
                                    android:alpha="0.9"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    tools:context="org.terna.register_ui.MainActivity">


                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_marginHorizontal="20dp"
                                        android:layout_marginVertical="10dp"
                                        android:background="#b3b2b2">

                                    </View>

                                    <TextView
                                        android:id="@+id/forgotPassword"
                                        android:layout_width="wrap_content"
                                        android:layout_height="30dp"
                                        android:gravity="center"
                                        android:text="Forget Password"
                                        android:textAlignment="center"
                                        android:textColor="@color/normaltextcolor"
                                        android:textSize="16sp" />


                                    <TextView
                                        android:id="@+id/newSellerRegistration"
                                        android:layout_width="wrap_content"
                                        android:layout_height="30dp"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:text="Register as Seller"
                                        android:textAlignment="center"
                                        android:textColor="@color/normaltextcolor"
                                        android:textSize="17sp"
                                        android:visibility="gone" />


                                </LinearLayout>


                            </LinearLayout>


                        </androidx.cardview.widget.CardView>


                    </RelativeLayout>


                </LinearLayout>


            </RelativeLayout>


        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>

